# Backend Environment Variables
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/oshxona

# Telegram Bot
BOT_TOKEN=your_bot_token_here
WEBHOOK_URL=https://oshxonanew.onrender.com

# Frontend URLs (Development)
ADMIN_PANEL_URL=http://localhost:3000
USER_FRONTEND_URL=http://localhost:3001
WEBAPP_URL=http://localhost:3003

# JWT
JWT_SECRET=your_super_secret_jwt_key_here

# Server
PORT=5000

# Courier Location Settings
COURIER_STALE_MS=300000
COURIER_CHECK_INTERVAL_MS=300000
COURIER_CHECK_LOGS=false
# Unified interval (5 minutes by default); do not set multiple intervals
COURIER_UPDATE_INTERVAL_MS=300000
COURIER_UPDATE_LOGS=false

# Optional: Cloudinary (if using cloud storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
