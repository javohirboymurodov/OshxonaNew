# Bot konfiguratsiyasi
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Admin ma'lumotlari (vergul bilan ajratilgan)
ADMIN_ID=123456789,987654321

# Database (MongoDB Atlas Cloud)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/oshxona
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/oshxona_test

# Server
NODE_ENV=development
PORT=3000
API_PORT=5000
SOCKET_PORT=3001

# Webhook (production uchun)
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_PATH=/webhook

# URLs (Frontend)
ADMIN_PANEL_URL=https://admin.oshxona.uz
USER_FRONTEND_URL=https://oshxona.uz
API_BASE_URL=https://api.oshxona.uz

# Cloudinary (Media Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT & Session
JWT_SECRET=your_jwt_secret_very_long_and_secure
SESSION_SECRET=your_session_secret_very_long_and_secure

# Kompaniya ma'lumotlari
COMPANY_NAME=Oshxona Professional
COMPANY_PHONE=+998901234567
COMPANY_EMAIL=info@oshxona.uz
COMPANY_ADDRESS=Toshkent, O'zbekiston

# To'lov tizimlari
CLICK_MERCHANT_ID=your_click_merchant_id
CLICK_SECRET_KEY=your_click_secret_key
CLICK_SERVICE_ID=your_click_service_id

PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_SECRET_KEY=your_payme_secret_key
PAYME_ENDPOINT=https://checkout.paycom.uz

# Xaritalar
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# File uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf

# Email (agar kerak bo'lsa)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis (cache uchun)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Business settings
DEFAULT_DELIVERY_FEE=5000
FREE_DELIVERY_AMOUNT=50000
MAX_DELIVERY_DISTANCE=15
DEFAULT_PREPARATION_TIME=30

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Notifications
ENABLE_SMS=false
SMS_API_KEY=your_sms_api_key
SMS_SENDER=Oshxona

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id